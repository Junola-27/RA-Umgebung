{
    "name": "RA-Docker-Cloud",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "dan-c-underwood.arm",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "postCreateCommand": "chmod +x ./setup_ra.sh && echo 'source /workspaces/${localWorkspaceFolderBasename}/setup_ra.sh' >> ~/.bashrc",
    "remoteUser": "root"
}
